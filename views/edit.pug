extends layouts
block content
    h1 #{title}
    form(action="/article/edit/"+article._id, method="POST")
        .form-group
            label Title:
            input(type="text", name="title", value=article.title)
        .form-group
            label Author:
            input(type="text", name="author", value=article.author)
        .form-group
            label Body:
            textarea(name="body")= article.body
        input(type="submit", value="submit")